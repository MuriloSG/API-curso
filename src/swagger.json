  "paths": {
    "/roles": {
      "post": {
        "tags": ["Roles"],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created.",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties": {
                    "id": {
                      "type":"string"
                    },
                    "name": {
                      "type":"string"
                    },
                    "created_at": {
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role already exists."
          },
          "401":{
            "description": "Invalid authentication token."
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "List all roles",
        "description": "Returns all roles paginated.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of the page",
            "required": false,
            "schema":{
              "type":"number",
              "example": "page=1"
            },
            "style": "label"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of registers per page",
            "required": false,
            "schema":{
              "type":"number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content":{
              "application/json":{
                "example": {
                  "per_page": 15,
                  "total": 2,
                  "current_page": 1,
                  "data": [
                    {
                      "id": "e416be99-136a-4bfa-91fb-5de17fde1256",
                      "name": "Users",
                      "created_at": "2023-09-14T17:18:27.000Z"
                    },
                    {
                      "id": "bf360821-bd96-4491-8a36-b7976bb87c43",
                      "name": "Adm",
                      "created_at": "2023-09-14T17:41:41.000Z"
                    }
                  ]
                }
              }
            }
          },
          "401":{
            "description": "Invalid authentication token."
          }
        }
      }
    },
    "/roles/{id}": {
      "put": {
        "tags": ["Roles"],
        "summary": "Update a role",
        "description": "Update a role.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identify of a role",
            "required": true,
            "schema":{
              "type":"string"
            },
            "style": "label"
          }
        ],
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties": {
                  "name":{
                    "type":"string"
                  }
                },
                "example": "Administrator"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success.",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string"
                    },
                    "name":{
                      "type":"string"
                    },
                    "created_at":{
                      "type":"string"
                    }
                  }
                },
                "example":
                {
                  "id": "e416be99-136a-4bfa-91fb-5de17fde1256",
                  "name": "User",
                  "created_at": "2023-09-14T17:18:27.000Z"
                }
              }
            }
          },
          "400":{
            "description": "Bad request."
          },
          "404": {
            "description": "Role not found."
          }
        }
      },
      "get": {
        "tags": ["Roles"],
        "summary": "Find role by ID",
        "description": "Returns roles based on ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identify of a role",
            "required": true,
            "schema":{
              "type":"string"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string"
                    },
                    "name":{
                      "type":"string"
                    },
                    "created_at":{
                      "type":"string"
                    }
                  }
                },
                "example":
                {
                  "id": "e416be99-136a-4bfa-91fb-5de17fde1256",
                  "name": "User",
                  "created_at": "2023-09-14T17:18:27.000Z"
                }
              }
            }
          },
          "400":{
            "description": "Bad request."
          },
          "404": {
            "description": "Role not found."
          }
        }
      }
    }
  }
}
